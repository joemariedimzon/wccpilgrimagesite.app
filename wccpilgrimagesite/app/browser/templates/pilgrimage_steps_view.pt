                                                                  <span id="form-widgets-datetime_added-timecomponents" class="datetimewidget-time">
                                                                        <select id="form-widgets-datetime_added-hour" class="hour datetime-widget required datetime-field" name="form.widgets.datetime_added-hour"></select>
                                                                        <span class="separator">:</span>
                                                                        <select id="form-widgets-datetime_added-minute" class="minute datetime-widget required datetime-field" name="form.widgets.datetime_added-minute"></select>
                                                                        <input type="hidden" name="form.widgets.datetime_added-timezone" originalvalue=""/>
                                                                        </span>
                                                                  <input type="hidden" value="1" name="form.widgets.datetime_added-empty-marker" originalvalue="1"/>
                                                            </div>
                                                      </li>
                                                      <li>
                                                            <div id="formfield-form-widgets-image" class="field z3cformInlineValidation kssattr-fieldname-form.widgets.image empty" data-fieldname="form.widgets.image">
                                                                  <label class="horizontal" for="form-widgets-image">Image</label>
                                                                  <div class="fieldErrorBox"></div>
                                                                  <span id="form-widgets-image" class="named-image-widget namedblobimage-field">
                                                                        <input id="form-widgets-image-input" type="file" name="form.widgets.image"/>
                                                                  </span>
                                                            </div>
                                                      </li>
                                                </ul>
                                                
                                                
                                                
                                                
                                                <div id="formfield-form-widgets-message" class="field z3cformInlineValidation kssattr-fieldname-form.widgets.message empty" data-fieldname="form.widgets.message">
                                                      <label class="horizontal" for="form-widgets-message">Message</label>
